{
  "include": ["src___/**/*"],
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["dom", "DOM.Iterable"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true
  }
}
